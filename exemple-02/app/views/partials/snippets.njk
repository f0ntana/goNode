<section class="snippets-list">
    <div class="list-header">
        <a href="#" data-modal-open="#new-snippet">NOVO SNIPPET</a>
    </div>
    {% for snippet in snippets %}
        <a href="/app/categories/{{ activeCategory }}/snippets/{{ snippet.id }}">
            <strong>{{ snippet.title }}</strong>
            <p>{{ snippet.excerpt }}</p>
        </a>
    {% endfor %}
</section>
<div class="modal" id="new-snippet">
    <form action="/app/categories/{{ activeCategory }}/snippets/create" class="modal-content" method="POST">
        <input type="text" name="title" placeholder="Titulo da Snippet">
        <div class="content-container">
            <textarea name="content" class="mde" placeholder="ConteÃºdo Snippet"></textarea>
        </div>
        <button type="submit">Salvar</button>
        <a href="#" data-modal-close="#new-snippet">Cancelar</a>
    </form>
</div>
