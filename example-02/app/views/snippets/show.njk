{% extends 'layouts/default.njk' %}

{% block body %}
<div class="wrapper">
    {% include 'partials/nav.njk'%}
    {% include 'partials/snippets.njk'%}
    <section class="snippet-content">
        <div class="actions">
            <a href="#" data-modal-open="#edit-snippet" class="edit">Editar</a>
            <form action="/app/categories/{{ activeCategory }}/snippets/{{ currentSnippet.id }}?_method=DELETE" method="POST">
                <button type="submit">Remover</button>
            </form>
        </div>
        <h1>{{ currentSnippet.title }}</h1>
        <div class="content">{{ currentSnippet.formatted | safe }}</div>
    </section>
    <div class="modal" id="edit-snippet">
    <form action="/app/categories/{{ activeCategory }}/snippets/{{ currentSnippet.id }}?_method=PUT" class="modal-content" method="POST">
        <input type="text" name="title" placeholder="Titulo da Snippet" value="{{ currentSnippet.title }}">
        <div class="content-container">
            <textarea name="content" class="mde" placeholder="ConteÃºdo Snippet">{{ currentSnippet.content }}</textarea>
        </div>
        <button type="submit">Salvar</button>
        <a href="#" data-modal-close="#edit-snippet">Cancelar</a>
    </form>
</div>
</div>
{% endblock %}
